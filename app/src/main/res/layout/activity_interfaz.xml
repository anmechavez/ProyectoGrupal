<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Interfaz"
    android:background="#121212"
    >


    <TextView
        android:id="@+id/tituloListEmp"
        android:textColor="#FFFFFF"
        android:layout_width="262dp"
        android:layout_height="37dp"
        android:layout_marginTop="28dp"
        android:text="LISTA DE EMPLEADOS"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:textColor="#FFFFFF"
        android:layout_width="377dp"
        android:layout_height="172dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.558"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/dniEditText"
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white"
            android:backgroundTint="@android:color/white"
            android:layout_width="377dp"
            android:layout_height="42dp"
            android:hint="DNI" />

        <EditText
            android:id="@+id/nombreEditText"
            android:textColorHint="@color/white"
            android:backgroundTint="@android:color/white"
            android:textColor="#FFFFFF"
            android:layout_width="377dp"
            android:layout_height="42dp"
            android:hint="Nombre" />

        <EditText
            android:id="@+id/apellidoEditText"
            android:textColorHint="@color/white"
            android:textColor="#FFFFFF"
            android:layout_width="377dp"
            android:layout_height="42dp"
            android:hint="Apellidos"
            android:backgroundTint="@android:color/white"
            />


        <EditText
            android:id="@+id/puestoEditText"
            android:textColorHint="@color/white"
            android:backgroundTint="@android:color/white"
            android:textColor="#FFFFFF"
            android:layout_width="377dp"
            android:layout_height="42dp"
            android:hint="Puesto de trabajo" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:textColor="#FFFFFF"
        android:layout_width="347dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <Button
            android:id="@+id/agregarEmpleadoButton"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="AÃ±adir" />
        />

        <Button
            android:id="@+id/actualizarEmpleadoButton"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="Modificar" />

        <Button
            android:id="@+id/eliminarEmpleadoButton"
            android:textColor="#FFFFFF"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Eliminar" /><![CDATA[


            />


    ]]>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="409dp"
        android:layout_height="28dp"
        android:layout_marginTop="4dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tituloListEmp"
        tools:layout_editor_absoluteX="2dp">

        <TextView
            android:id="@+id/tvDNI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="DNI:"
            tools:text="DNI:" />
        <TextView
            android:id="@+id/tvNombre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="Nombre:"
            tools:text="Nombre:" />
        <TextView
            android:id="@+id/tvApellido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="Apellido:"
            tools:text="Apellido:" />
        <TextView
            android:id="@+id/tvTrabajo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:layout_weight="1"
            android:text="Trabajo:"
            tools:text="Trabajo:" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:divider="#FFFFFF"
        android:showDividers="middle"
        android:stretchColumns="*"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        tools:layout_editor_absoluteX="2dp">


        <TableRow>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="INTEGER"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="TEXT"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="TEXT"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="TEXT"
                android:textStyle="bold" />

        </TableRow>

        <!-- Datos de los empleados -->
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>